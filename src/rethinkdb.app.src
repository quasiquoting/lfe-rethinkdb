{application, rethinkdb, [
  {description,  "RethinkDB driver for the BEAM."},
  {vsn,          "0.1.1"},
  {applications, [kernel, stdlib, sasl]},
  {registered,   [rethinkdb, rethinkdb_sup]},
  {mod,          {rethinkdb, []}},
  {env,          [{timeout, 30000}]},

  {maintainers, ["Eric Bailey"]},
  {licenses,    ["BSD-3"]},
  {links, [
    {"GitHub", "https://github.com/quasiquoting/lfe-rethinkdb"}
  ]},
  {files, ["src", "include", "rebar.*", "README.md", "LICENSE", "proto"]}
]}.
